{
  "include": [
    // "index.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "target": "ES6",
    "sourceMap": true,
    "removeComments": false,
    "moduleResolution": "node",
    // "module": "ES6",
    "skipLibCheck": true,
    "declaration": true
    // "allowSyntheticDefaultImports": true
  }
}